{% extends 'base.html.twig' %}

{% block title %}Liste des missions{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}

    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(missions, 'Titre', 'm.title') }}</th>
                <th>{{ knp_pagination_sortable(missions, 'Pays', 'c.name') }}</th>
                
                <th>{{ knp_pagination_sortable(missions, 'Type', 't.name') }}</th>
                <th>{{ knp_pagination_sortable(missions, 'Status', 's.name') }}</th>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for mission in missions %}
                <tr>
                    <td>{{ mission.title }}</td>
                    <td>{{ mission.country.getName }}</td>
                    <td>{{ mission.type.getName }}</td>
                    <td>{{ mission.status.getName }}</td>
                    <td>{{ mission.getCodeName }}</td>
                    <td><a class="btn btn-info" href="{{ path('single-mission',{'id' : mission.id}) }}">DÃ©tails</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


