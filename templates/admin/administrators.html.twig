{% extends 'admin.html.twig' %}


{% block body %}

    <h1>Administrateurs</h1>

    <a href="{{ path('user_create') }}" class="btn btn-info mt-3">Ajouter</a>

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Date de création</th>
                <th>Role(s)</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.getCreatedAt|date('d-m-Y') }}</td>
                    <td>{{ user.roles|join(', ') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}