{% extends 'admin.html.twig' %}


{% block body %}

    <h1>Cibles</h1>

    <a href="{{ path('target_create') }}" class="btn btn-info mt-3">Ajouter</a>

    {% include "flashMessages.html.twig" %}

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Id Code</th>
                <th>Nationalité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for target in targets %}
                <tr>
                    <td>{{ target.id }}</td>
                    <td>{{ target.lastname }}</td>
                    <td>{{ target.firstname }}</td>
                    <td>{{ target.getDateOfBirth|date('d-m-Y') }}</td>
                    <td>{{ target.getCodeName }}</td>
                    <td>{{ target.nationality.nationality }}</td>
                    <td>
                        <a href="{{ path('target_edit', {'id': target.id }) }}"><i class="text-warning fa fa-edit"></i></a>
                        <a href=""><i class="text-danger fa fa-times"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}