{% extends 'admin.html.twig' %}

{% block body %}

    <h1>Missions</h1>

    <a href="{{ path('mission_create') }}" class="btn btn-info mt-3">Ajouter</a>

    {% include 'flashMessages.html.twig' %}

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Code</th>
                <th class="col">Pays</th>
                <th class="col">Type</th>
                <th class="col">Spécialité</th>
                <th class="col">Cible</th>
                <th class="col">Planque</th>
                <th class="col">Agent</th>
                <th class="col">Début</th>
                <th class="col">Fin</th>
                <th class="col">Status</th>
                <th class="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <div class="row mt-5">
    
        <div class="col col-sm-6">
            <h2>Types de missions</h2>
            
            <a href="{{ path('mission_type_create') }}" class="btn btn-info mt-3">Ajouter</a>

            <table class="table table-hover mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

        <div class="col col-sm-6">
            <h2>Status de mission</h2>

            <a href="{{ path('mission_status_create') }}" class="btn btn-info mt-3">Ajouter</a>

            <table class="table table-hover mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                    </tr>
                </thead>
                <tbody>
                    {% for status in mission_statuses %}
                        <tr>
                            <td>{{ status.id }}</td>
                            <td>{{ status.name }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    
    </div>





{% endblock %}
