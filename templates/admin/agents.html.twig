{% extends 'admin.html.twig' %}


{% block body %}

    <h1>Agents</h1>

    <a href="{{ path('agent_create') }}" class="btn btn-info mt-3">Ajouter</a>

    {% include "flashMessages.html.twig" %}

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Id Code</th>
                <th>Nationalité</th>
                <th>Spécialité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for agent in agents %}
                <tr>
                    <td>{{ agent.id }}</td>
                    <td>{{ agent.lastname }}</td>
                    <td>{{ agent.firstname }}</td>
                    <td>{{ agent.getDateOfBirth|date('d-m-Y') }}</td>
                    <td>{{ agent.getIdCode }}</td>
                    <td>{{ agent.nationality.nationality }}</td>
                    <td>
                        {% for specialty in agent.specialty %}
                            {{ specialty.name }} |
                        {% endfor %}
                    </td>
                    <td>
                        <a href=""><i class="text-warning fa fa-edit"></i></a>
                        <a href=""><i class="text-danger fa fa-times"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}