{% extends 'admin.html.twig' %}


{% block body %}

    <h1>Spécialités</h1>

    <a href="{{ path('specialty_create') }}" class="btn btn-info mt-3">Ajouter</a>

    {% include "flashMessages.html.twig" %}

    <div class="row">

        <div class="col col-sm-6">
            <table class="table table-hover mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for specialty in specialties %}
                        <tr>
                            <td>{{ specialty.id }}</td>
                            <td>{{ specialty.name }}</td>
                            <td>
                                <a href=""><i class="text-warning fa fa-edit"></i></a>
                                <a href=""><i class="text-danger fa fa-times"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
    
        </div>
    
    </div>


{% endblock %}