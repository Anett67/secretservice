{% extends 'admin.html.twig' %}


{% block body %}

    <h1>Contacts</h1>

    <a href="{{ path('contact_create') }}" class="btn btn-info mt-3">Ajouter</a>

    {% include "flashMessages.html.twig" %}

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Id Code</th>
                <th>Nationalité</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.lastname }}</td>
                    <td>{{ contact.firstname }}</td>
                    <td>{{ contact.getDateOfBirth|date('d-m-Y') }}</td>
                    <td>{{ contact.getCodeName }}</td>
                    <td>{{ contact.nationality.nationality }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}